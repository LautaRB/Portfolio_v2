---
interface Props {
  class?: string;
  title?: string;
}

const { title, class: className } = Astro.props;
---

<article 
  class={`
    ${className} 
    bg-neutral-900/50 
    border border-neutral-800 
    rounded-3xl 
    p-6 
    hover:border-neutral-700 
    transition duration-300 
    group
    flex flex-col justify-between
  `}
>
  {title && (
    <h3 class="text-2xl font-bold mb-4 text-neutral-200">{title}</h3>
  )}
  
  <slot />
</article>